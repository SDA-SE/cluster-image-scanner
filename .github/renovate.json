{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies", "github-actions"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "timezone": "UTC",
  "schedule": ["before 6am on monday"],
  "github-actions": {
    "enabled": true,
    "pinDigests": false,
    "commitMessageTopic": "GitHub Action {{depName}}",
    "commitMessageExtra": "to {{newVersion}}",
    "branchTopic": "github-actions-{{depNameSanitized}}",
    "groupName": "GitHub Actions",
    "automerge": false,
    "major": {
      "automerge": false
    },
    "minor": {
      "automerge": false
    },
    "patch": {
      "automerge": true,
      "automergeType": "pr"
    }
  },
  "packageRules": [
    {
      "description": "Group all GitHub Actions updates together",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": false,
      "commitMessageTopic": "GitHub Actions",
      "commitMessageExtra": "",
      "branchTopic": "github-actions-updates",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Auto-merge patch updates for trusted GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchPackageNames": [
        "actions/checkout",
        "actions/setup-node",
        "actions/setup-python",
        "actions/cache",
        "actions/upload-artifact",
        "actions/download-artifact"
      ],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Convert GitHub Actions from hash to semantic versions",
      "matchManagers": ["github-actions"],
      "pinDigests": false,
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "description": "Handle major version updates for GitHub Actions separately",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "groupName": "GitHub Actions (Major)",
      "automerge": false,
      "labels": ["dependencies", "github-actions", "major-update"]
    }
  ],
  "ignoreDeps": [

  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"]
  },
  "osvVulnerabilityAlerts": true,
  "customManagers": [
    {
      "description": "Update GitHub Actions in composite actions",
      "customType": "regex",
      "fileMatch": ["\\.yml$", "\\.yaml$"],
      "matchStrings": [
        "uses:\\s+(?<depName>[^@\\s]+)@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "github-tags",
      "lookupNameTemplate": "{{depName}}"
    }
  ],
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}",
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "rebaseWhen": "conflicted"
}
